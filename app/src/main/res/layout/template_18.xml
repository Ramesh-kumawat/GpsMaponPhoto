        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginEnd="16dp"-->
        <!--            android:format12Hour="hh:mm aa"-->
        <!--            android:format24Hour="hh:mm aa"-->
        <!--            android:gravity="center"-->
        <!--            android:maxLines="1"-->
